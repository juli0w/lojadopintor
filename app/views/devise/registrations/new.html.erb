<%= heading "Cadastro - Informe seus dados" %>

<div class="section">
<div class="col s12">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, autofocus: true, class: "radius" %>
        <%= f.label :email, value: "Email" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password, autocomplete: "off", class: "radius" %>
        <%= f.label :password, value: "Senha" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "radius" %>
        <%= f.label :password_confirmation, value: "ConfirmaÃ§Ã£o de senha" %>
      </div>
    </div>

    <div class="section">
      <%= f.button type: "submit", name: "action", class: "btn-large right" do %>
        <i class="material-icons right">perm_identity</i>Cadastrar
      <% end %>
    </div>
  <% end %>

</div>
</div>
