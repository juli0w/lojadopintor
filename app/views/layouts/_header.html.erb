<nav class="grey darken-4">
  <div class="nav-wrapper">
    <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>

    <ul class="right hide-on-med-and-down topnav">
      <%= render "layouts/header_links" %>
    </ul>

    <ul id="nav-mobile" class="side-nav">
      <%= render "layouts/header_links" %>
    </ul>
  </div>
</nav>

<div class="row">
  <div class="col s12 m8">
    <div id="header" class="white">
      <%= link_to root_url do %>
        <div class="logo">
          <h1 id="logo">Loja do Pintor</h1>
        </div>
      <% end %>
    </div>
  </div>

  <div class="search col s12 m4">
    <nav class="search-nav white">
      <div class="nav-wrapper">
        <%= form_tag search_path, method: :get do %>
          <div class="input-field">
            <input id="search" type="search" name="q" value="<%= params[:q] %>" required>
            <label for="search"><i class="material-icons blue-text">search</i></label>
            <i class="mdi-navigation-close close"></i>
          </div>
        <% end %>
      </div>
    </nav>
  </div>
</div>

