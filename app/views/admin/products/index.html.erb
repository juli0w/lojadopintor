<%= heading "Produtos" %>

<table class="striped responsive-table">
  <thead>
    <tr>
        <th></th>
        <th>Produto</th>
        <th>Valor</th>
        <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>#<%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.cost %></td>
        <td><%= link_to "Editar", [:edit, :admin, product] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %>

<div class="row">
  <div class="col s12 admin-actions">
    <%= link_to "Cadastrar", new_admin_product_path, class: "btn" %>
  </div>
</div>
